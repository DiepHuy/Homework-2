<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/ten_hocsinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tensinhvien"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/email_hocsinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ten_hocsinh" />

    <TextView
        android:id="@+id/tuoi_hocsinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tuoi_hoc_sinh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_hocsinh" />
</androidx.constraintlayout.widget.ConstraintLayout>